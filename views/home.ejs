<%- include("partials/header"); -%>

<div class="search">
  <form class="search" action="/search" method="post">
    <input type="text" name="search" placeholder="Search with title" autocomplete="off">
    <button type="submit" name="button" >Search</button>
  </form>
</div>


<h3>Home</h3>
<p><%= homeContent %></p>

<% posts.forEach(function(post){ %>

   <h3> <%= post.title %> </h3>
   <p> <%= post.content.substring(0,200)+ "..." %> <a href= "/posts/<%= post._id %>">Read More</a></p>
<% }); %>



</body>
</div>
</html>

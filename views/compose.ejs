<form action="/compose" method="post">
  <div class="form-group">
      <label>Title</label>
      <input type="text" name="postTitle" value="" class="form-control" required>
      <label>Post</label>
      <textarea name="postBody" rows="5" cols="120" class="form-control" required></textarea >
    </div>
    <button type="submit" name="button" class="btn btn-primary" >Publish</button>
</form>

